@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-container">
    <div class="auth-header">
        <h2>Şifremi Unuttum</h2>
        <p>Şifrenizi sıfırlamak için e-posta adresinizi girin</p>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="auth-success-message">
            @ViewBag.Message
        </div>
    }
    else
    {
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" autocomplete="email" />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Şifre Sıfırlama Bağlantısı Gönder</button>
            </div>

            <div class="auth-links">
                <div>
                    <a asp-controller="Account" asp-action="Login">Giriş sayfasına dön</a>
                </div>
            </div>
        </form>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}