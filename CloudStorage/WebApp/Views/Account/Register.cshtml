@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="auth-container animate-fade-in">
            <div class="auth-header">
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus-fill text-primary" style="font-size: 3rem;"></i>
                </div>
                <h2>Kayıt Ol</h2>
                <p>Yeni bir hesap oluşturun</p>
            </div>

            <form asp-controller="Account" asp-action="Register" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                

                <div class="form-group">
                    <label asp-for="Username" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Kullanıcı adınızı girin" autocomplete="username" />
                    </div>
                    <span asp-validation-for="Username" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifrenizi tekrar girin" autocomplete="new-password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                    </button>
                </div>

                <div class="auth-links">
                    <div>
                        Zaten bir hesabınız var mı? <a asp-controller="Account" asp-action="Login" class="fw-bold">Giriş Yap</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}